#include <stdio.h>
int main ()
{
	float base, altura;
	float area, perimetro;
	
	printf("digite o valor da base:");
	scanf("%f",&base);
	printf("digite o valor da altura:");
	scanf("%f",&altura);
	
	perimetro=(base+altura)*2;
	area=base*altura;
	
	printf("Perímetro=%.2f\nÁrea=%.2f",perimetro,area);
	
	return 0;
}
